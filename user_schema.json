{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "User Document",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "description": "Unique identifier for the user"
    },
    "display_name": {
      "type": "string",
      "description": "User's display name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User's email address"
    },
    "hometown": {
      "type": "string",
      "description": "User's hometown"
    },
    "birthday": {
      "type": "string",
      "format": "date-time",
      "description": "User's birthday as a timestamp"
    },
    "created_time": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the user document was created"
    }
  },
  "required": ["uid", "display_name", "email", "created_time"],
  "additionalProperties": false
}
